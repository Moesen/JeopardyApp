doctype html
html
    head 
        title=title
        meta(name="viewport" content="width=device-width" intial-scale=1)
        link(rel="stylesheet", href="/css/host.css")


    body
        header 
            img.logo(src="/img/jeopardy_icon.png")
    
    div.content__container
        h2.js-active=`${users.length} joined`
        ol.js-buzzes
            each buzz in buzzes
                li=`$(buzz.name) on Team ${buzz.team}`
        button.js-clear="Clear buzzes"
    
    script(src='/socket.io/socket.io.js')
    script(src="/js/host.js") 
    